<%- include("header") -%>

    <div class="box" id="heading">
        <h1><%= listTitle %></h1>
    </div>
    <div class="box">
        <ul>
            <%newListItems.forEach(function(work){%>
                <form action="/delete" method="post">
                    <div class="item">
                        <input type="checkbox" name="Checkbox" value="<%=work._id%>" onChange="this.form.submit()">
                        <p><%= work.toDo %></p>
                    </div>
                    <input type="hidden" name="listName" value="<%= listTitle%>">
                </form>
            <%});%>
        </ul>
        <form class="item" action="/" method="post">
            <input name="NewItem" type="text" placeholder="New Item" autocomplete="off">
            <button type="submit" name="list" value="<%=listTitle%>">+</button>
        </form>
    </div>
    
    <%- include("footer") -%>